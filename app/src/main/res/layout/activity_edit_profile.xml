<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activity_screens.EditProfileActivity"
    android:background="@color/color_background_primary">
    <LinearLayout
        android:id="@+id/layoutFirst"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/color_background_second_primary"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_12sdp">
        <ImageView
            android:layout_width="@dimen/_25ssp"
            android:layout_height="@dimen/_25ssp"
            android:src="@drawable/x"
            android:id="@+id/imageX"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/textTitle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFirst"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="top|center|start"
        android:padding="@dimen/_12sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/_54sdp"
                android:layout_height="@dimen/_54sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_image"
                android:padding="@dimen/_2sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|top|start"
                android:layout_weight="1"
                android:paddingStart="@dimen/_12sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_54sdp"
                    android:background="@drawable/bg_container_input"
                    android:padding="@dimen/_2sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_7sdp">
                    <EditText
                        android:id="@+id/inputUserName"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="@dimen/_7sdp"
                        android:hint="Tên đăng nhập"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/color_text_primary"
                        android:textColorHint="@color/color_text_note"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_54sdp"
                    android:background="@drawable/bg_container_input"
                    android:padding="@dimen/_2sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_7sdp">
                    <EditText
                        android:id="@+id/inputEmail"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="@dimen/_7sdp"
                        android:hint="Email"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/color_text_primary"
                        android:textColorHint="@color/color_text_note"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54ssp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:background="@drawable/bg_button_container">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/color_text_note"
                android:id="@+id/buttonSaveUpdateProfile"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>