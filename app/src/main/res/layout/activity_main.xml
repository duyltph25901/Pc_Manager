<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_plash_screen"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/image_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/textShopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BeeShop"
        android:textSize="@dimen/_34ssp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ứng dụng dành riêng cho cửa hàng"
        android:gravity="center"
        android:layout_marginTop="@dimen/_7sdp"
        android:textStyle="italic"
        android:textColor="@color/color_text_note"/>

</LinearLayout>