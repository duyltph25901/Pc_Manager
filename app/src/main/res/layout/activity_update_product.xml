<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activity_screens.UpdateProductActivity"
    android:background="@color/color_background_primary"
    android:padding="@dimen/_12sdp">

  <LinearLayout
      android:id="@+id/layoutFirst"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintTop_toTopOf="parent"
      android:gravity="center">
    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_34sdp"
        android:src="@drawable/icon_back"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Cập nhật thông tin"
        android:textSize="@dimen/_24ssp"
        android:textStyle="bold"
        android:textColor="@color/color_text_note"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintTop_toBottomOf="@id/layoutFirst"
      app:layout_constraintBottom_toBottomOf="parent"
      android:gravity="center">
    <TextView
        android:id="@+id/textProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingVertical="@dimen/_7sdp"
        android:text="Halo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_container_input"
        android:padding="@dimen/_2sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_7sdp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/bg_input"
          android:orientation="vertical"
          android:gravity="center">
        <EditText
            android:id="@+id/inputPriceProduct"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingHorizontal="@dimen/_12sdp"
            android:hint="Giá sản phẩm mới"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_container_input"
        android:padding="@dimen/_2sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_7sdp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/bg_input"
          android:orientation="vertical"
          android:gravity="center">
        <EditText
            android:id="@+id/inputDiscount"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingHorizontal="@dimen/_12sdp"
            android:hint="Triết khấu"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_container_input"
        android:padding="@dimen/_2sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_7sdp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/bg_input"
          android:orientation="vertical"
          android:gravity="center">
        <EditText
            android:id="@+id/inputSum"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingHorizontal="@dimen/_12sdp"
            android:hint="Tổng kho"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
      </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
      android:orientation="vertical"
      android:gravity="center"
      android:background="@drawable/bg_button_container"
      android:padding="@dimen/_2sdp">
      <Button
          android:id="@+id/btnUpdateProduct"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Cập nhật"
          android:textSize="@dimen/_14ssp"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:background="@drawable/bg_button"/>
    </LinearLayout>
  </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>